{
  "tasks": {
    "lock": "deno cache --lock=deno.lock --lock-write ./*.ts git/*.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test -A --no-check",
    "dev": "deno task fmt && deno task lint && deno task test",
    "install": "deno install -A --name molt cli.ts"
  },
  "fmt": {
    "exclude": ["CHANGELOG.md"]
  },
  "lint": {
    "exclude": ["src/fixtures/*"]
  }
}
